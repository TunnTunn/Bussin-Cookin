<!-- views/admin/dashboard.hbs -->
<div class="dashboard">
    {{!-- Include Shared Sidebar --}}
    {{> admin-sidebar}}

    {{!-- Main Content --}}
    <main class="dashboard__main">
        {{!-- Overview Cards --}}
        <div class="dashboard__overview">
            <div class="dashboard__card">
                <div class="dashboard__card-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="dashboard__card-content">
                    <h3 class="dashboard__card-title">Total Users</h3>
                    <p class="dashboard__card-value">{{totalUsers}}</p>
                    <span class="dashboard__card-change increase">
                        <i class="fas fa-arrow-up"></i> 12%
                    </span>
                </div>
            </div>

            <div class="dashboard__card">
                <div class="dashboard__card-icon">
                    <i class="fas fa-file-alt"></i>
                </div>
                <div class="dashboard__card-content">
                    <h3 class="dashboard__card-title">Total Posts</h3>
                    <p class="dashboard__card-value">{{totalPosts}}</p>
                    <span class="dashboard__card-change increase">
                        <i class="fas fa-arrow-up"></i> 8%
                    </span>
                </div>
            </div>

            <div class="dashboard__card">
                <div class="dashboard__card-icon">
                    <i class="fas fa-comments"></i>
                </div>
                <div class="dashboard__card-content">
                    <h3 class="dashboard__card-title">Comments</h3>
                    <p class="dashboard__card-value">{{totalComments}}</p>
                    <span class="dashboard__card-change decrease">
                        <i class="fas fa-arrow-down"></i> 3%
                    </span>
                </div>
            </div>

            <div class="dashboard__card">
                <div class="dashboard__card-icon">
                    <i class="fas fa-eye"></i>
                </div>
                <div class="dashboard__card-content">
                    <h3 class="dashboard__card-title">Page Views</h3>
                    <p class="dashboard__card-value">{{pageViews}}</p>
                    <span class="dashboard__card-change increase">
                        <i class="fas fa-arrow-up"></i> 15%
                    </span>
                </div>
            </div>
        </div>

        {{!-- Recent Activity --}}
        <section class="dashboard__section">
            <h2 class="dashboard__section-title">Recent Activity</h2>
            <div class="dashboard__activity">
                {{#each recentActivities}}
                <div class="dashboard__activity-item">
                    <div class="dashboard__activity-icon">
                        <i class="{{this.icon}}"></i>
                    </div>
                    <div class="dashboard__activity-content">
                        <p class="dashboard__activity-text">{{this.text}}</p>
                        <span class="dashboard__activity-time">{{this.time}}</span>
                    </div>
                </div>
                {{/each}}
            </div>
        </section>
    </main>
</div>
